{
  "extends": "tslint:recommended",
  "rules": {
    "no-parameter-properties": true,
    "quotemark": ["single"],
    "object-literal-sort-keys": false,
    "no-var-requires": false,
    "max-line-length": [true, 120],
    "arrow-parens": false,
    "trailing-comma": ["error", "never"]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}
