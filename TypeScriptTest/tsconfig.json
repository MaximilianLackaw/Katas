{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": [ "node", "mocha", "chai" ]
  },
  "exclude": [
    "node_modules"
  ]
}
